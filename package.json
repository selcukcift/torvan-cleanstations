{
  "name": "clean-stations",
  "version": "1.0.0",
  "description": "Torvan Medical CleanStation Configurator and Workflow App",
  "main": "src/server.js",
  "scripts": {
    "dev": "npm run env:auto && next dev -p 3005",
    "dev:manual": "next dev -p 3005",
    "dev:frontend": "next dev -p 3005",
    "dev:backend": "node src/server.js",
    "dev:frontend-only": "next dev -p 3005",
    "dev:backend-only": "node src/server.js",
    "build": "next build",
    "start": "next start -p 3005",
    "start:frontend": "next start -p 3005",
    "start:backend": "node src/server.js",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern='(components|stores|lib).*\\.test\\.(ts|tsx)$'",
    "test:integration": "jest --testPathPattern='api.*\\.test\\.ts$'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test && npm run test:e2e",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:seed": "node scripts/seed.js",
    "prisma:seed:all": "node scripts/seed-all.js",
    "db:reset": "prisma migrate reset --force && npm run prisma:seed:all",
    "env:work": "cp .env.work .env.local && echo 'Switched to WORK environment (PostgreSQL at 172.16.16.61)'",
    "env:home": "cp .env.home .env.local && echo 'Switched to HOME environment (PostgreSQL at localhost)'",
    "env:status": "echo 'Current DATABASE_URL:' && grep DATABASE_URL .env.local",
    "env:auto": "node scripts/auto-env-detect.js",
    "test:db": "node test-db-connection.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/react": "19.1.6",
    "@types/supertest": "^6.0.3",
    "bcryptjs": "^3.0.2",
    "concurrently": "^9.1.2",
    "eslint": "^9.28.0",
    "eslint-config-next": "^15.3.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "node-mocks-http": "^1.17.2",
    "playwright": "^1.52.0",
    "prisma": "^6.8.2",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.0.1",
    "@prisma/client": "^6.8.2",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.14",
    "@types/bcryptjs": "^2.4.6",
    "autoprefixer": "^10.4.21",
    "axios": "^1.9.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "framer-motion": "^12.15.0",
    "immer": "^10.1.1",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.511.0",
    "next": "^15.3.3",
    "next-auth": "^4.24.11",
    "postcss": "^8.5.4",
    "react": "^19.1.0",
    "react-day-picker": "^9.1.3",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.56.4",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^3.4.17",
    "zod": "^3.25.45",
    "zustand": "^5.0.5"
  },
  "prisma": {
    "seed": "node scripts/seed.js"
  }
}
