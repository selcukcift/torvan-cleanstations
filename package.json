    "react-dom": "^19.1.0",
    "react-hook-form": "^7.56.4",
    "react-pdf": "^9.2.1",
    "svix": "^1.68.0",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^3.4.17",
    "zod": "^3.25.45",
    "zustand": "^5.0.5"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
