{
  "name": "clean-stations",
  "version": "1.0.0",
  "description": "Torvan Medical CleanStation Configurator and Workflow App",
  "main": "src/server.js",
  "scripts": {
    "dev": "node scripts/kill-port.js 3005 && next dev -p 3005",
    "dev:frontend": "next dev -p 3005",
    "dev:backend": "node src/server.js",
    "build": "next build",
    "start": "next start -p 3005",
    "start:frontend": "next start -p 3005",
    "start:backend": "node src/server.js",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern='(components|stores|lib).*\\.test\\.(ts|tsx)$'",
    "test:integration": "jest --testPathPattern='api.*\\.test\\.ts$'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test && npm run test:e2e",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:seed": "node prisma/seed.js",
    "prisma:seed:legacy": "node scripts/seed.js",
    "db:reset": "prisma migrate reset --force && npm run prisma:seed",
    "db:seed": "npm run prisma:seed",
    "test:db": "node test-db-connection.js",
    "sync:users": "tsx scripts/sync-users-with-clerk.ts",
    "clerk:migrate": "node scripts/migrate-to-clerk.js",
    "clerk:users": "node scripts/migrate-users-to-clerk.js prepare",
    "clerk:link": "node scripts/migrate-users-to-clerk.js link",
    "clerk:auto-link": "node scripts/auto-link-clerk-accounts.js prepare",
    "clerk:status": "node scripts/auto-link-clerk-accounts.js status"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/react": "^19.1.8",
    "@types/supertest": "^6.0.3",
    "bcryptjs": "^3.0.2",
    "concurrently": "^9.1.2",
    "eslint": "^9.28.0",
    "eslint-config-next": "^15.3.3",
    "jest": "^30.0.2",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "node-mocks-http": "^1.17.2",
    "playwright": "^1.52.0",
    "prisma": "^6.8.2",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.23.1",
    "@hookform/resolvers": "^5.0.1",
    "@prisma/client": "^6.8.2",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
