# .env.local.example
# Local Development Environment Overrides
# Copy this file to .env.local and customize for your local setup
# .env.local is not committed to version control for security

# Local Database (override if using different local setup)
# DATABASE_URL="postgresql://your_local_user:your_local_password@localhost:5432/torvan-db-local"

# Local JWT Secret (change for local development)
# JWT_SECRET=your-local-development-jwt-secret-key

# Local File Upload Directory (customize if needed)
# UPLOADS_DIR=./uploads/local

# Development Debugging
# LOG_LEVEL=debug
# ENABLE_METRICS=true

# Local CORS Origins (add any additional local URLs)
# CORS_ORIGINS=http://localhost:3000,http://localhost:3004,http://localhost:3005,http://localhost:8080

# Example: Database connection for Docker Compose
# DATABASE_URL="postgresql://postgres:password@localhost:5432/torvan-db"

# Example: Use different ports if conflicts exist
# PORT=3014
# NEXT_PUBLIC_API_URL=http://localhost:3015/api